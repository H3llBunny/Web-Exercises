<main class="mt-3">
	<link rel="stylesheet" href="/text.css" type="text/css" />
	<div class="container justify-content-center">
		<h3 class="text-center">My Cart</h3>
		<table class="table table-hover table-striped text-center">
			<thead>
				<tr class="row">
					<th scope="col" class="col-lg-5">Name</th>
					<th scope="col" class="col-lg-5">Price</th>
					<th scope="col" class="col-lg-2">Remove</th>
				</tr>
			</thead>
			<tbody>
				@foreach (SMS.ViewModels.Carts.CartProductViewModel product in Model)
				{
				<tr class="row">
					<td class="col-lg-5">@product.Name</td>
					<td class="col-lg-5">@product.Price</td>
						<td class="col-lg-2">
							<div class="button-holder">
								<a href="/Carts/Remove?productId=@product.Id" class="btn btn-outline-primary">Remove</a>
							</div>
						</td>
				</tr>
				}
			</tbody>
		</table>
		<div class="button-holder text-center">
			<a href="/Carts/Buy" class="btn btn-outline-primary">Buy</a>
		</div>
	</div>
</main>